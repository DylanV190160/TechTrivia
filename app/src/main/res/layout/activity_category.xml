<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/ic_background"
    android:padding="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5"
        android:orientation="vertical"
        android:useDefaultMargins="false"
        >

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATEGORY VIEW"
                android:gravity="center"
                android:textColor="@color/teal"
                android:textSize="20sp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_category_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a category to begin the quiz"
                android:textColor="@color/white"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_people_category"
                android:layout_width="225dp"
                android:layout_height="100dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_robotic"
                app:iconGravity="start"
                app:iconSize="60dp"
                android:text="People"
                android:textAlignment="center"
                android:textSize="24sp">
            </com.google.android.material.button.MaterialButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_peopleScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/teal"
                android:textSize="16sp"
                android:textStyle="italic"
                android:text="Highest Score ">
            </TextView>
            <TextView
                android:id="@+id/tv_peopleScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="3/3">
            </TextView>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_terms_category"
                android:layout_width="225dp"
                android:layout_height="100dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_system"
                app:iconGravity="start"
                app:iconSize="60dp"
                android:text="Terms"
                android:textAlignment="center"
                android:textSize="24sp">
            </com.google.android.material.button.MaterialButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_termsScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/teal"
                android:textSize="16sp"
                android:textStyle="italic"
                android:text="Highest Score ">
            </TextView>
            <TextView
                android:id="@+id/tv_termsScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/pink"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="3/3">
            </TextView>
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_device_category"
                android:layout_width="225dp"
                android:layout_height="100dp"
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/ic_machine"
                app:iconGravity="start"
                app:iconSize="60dp"
                android:text="Devices"
                android:textSize="24sp">
            </com.google.android.material.button.MaterialButton>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deviceScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/teal"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:text="Highest Score ">
                </TextView>
                <TextView
                    android:id="@+id/tv_deviceScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="3/3">
                </TextView>

            </LinearLayout>


        </LinearLayout>

    </GridLayout>
</LinearLayout>